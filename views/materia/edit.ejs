    <h1>Editar Registro Materia</h1>
    <% if (nombre) { %>

      <!--<h1> <i class='bx bxs-right-arrow-circle'></i></h1>  -->
      
      <div class="container mt-4" >
        <div class="card border-secondary">
            <div class="card-header">Editar Registro</div>
            <div class="card-body">
                <form action="/materia/update" method="POST">
                    <input id="id" name="id" value="<%= nombre.id %>" hidden>
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre de Materia</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" value="<%= nombre.nombre %>" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="semestre" class="form-label">Semestre</label>
                        <select id="semestre" name="semestre" class="form-select" tabindex="2">
                            <option <%= nombre.semestre=='primero' ? "selected":'' %> value="primero" selected>primero</option>
                            <option <%= nombre.semestre=='segundo' ? "selected":'' %> value="segundo" selected>segundo</option>
                            <option <%= nombre.semestre=='tercero' ? "selected":'' %> value="tercero" selected>tercero</option>
                            <option <%= nombre.semestre=='cuarto' ? "selected":'' %> value="cuarto" selected>cuarto</option>
                            <option <%= nombre.semestre=='quinto' ? "selected":'' %> value="quinto" selected>quinto</option>
                            <option <%= nombre.semestre=='sexto' ? "selected":'' %> value="sexto" selected>sexto</option>
                            <option <%= nombre.semestre=='septimo' ? "selected":'' %> value="septimo" selected>septimo</option>
                            <option <%= nombre.semestre=='octavo' ? "selected":'' %> value="octavo" selected>octavo</option>
                            <option <%= nombre.semestre=='noveno' ? "selected":'' %> value="noveno" selected>noveno</option>
                            <option <%= nombre.semestre=='decimo' ? "selected":'' %> value="decimo" selected>decimo</option>
                            
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                    <a href="/materia" class="btn btn-secondary">Cancelar</a>
                    </form>
                    </div>
        </div>
    </div>


<% } %>


